    "version": "0.2.0",
    "configurations": [
        {
            "name": "pySync Server",
            "type": "python",
            "request": "launch",
            "program": "server.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/Server"
        },
        {
            "name": "PySync Agent",
            "type": "python",
            "request": "launch",
            "program": "agent.py",
            "console": "integratedTerminal",
            "args": ["user@pysync.com", "password"],
            "cwd": "${workspaceFolder}/Agent"
        }
    ]
}